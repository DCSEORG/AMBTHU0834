@page
@model ExpenseManagement.Pages.NewExpenseModel
@{
    ViewData["Title"] = "Add Expense";
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header bg-white py-3">
                <h4 class="mb-0">Add Expense</h4>
            </div>
            <div class="card-body">
                <form method="post">
                    <div class="mb-3">
                        <label class="form-label">Amount (Â£)</label>
                        <input type="number" step="0.01" min="0.01" asp-for="Input.Amount" class="form-control" required />
                        <span asp-validation-for="Input.Amount" class="text-danger"></span>
                    </div>
                    
                    <div class="mb-3">
                        <label class="form-label">Date</label>
                        <input type="date" asp-for="Input.ExpenseDate" class="form-control" required />
                        <span asp-validation-for="Input.ExpenseDate" class="text-danger"></span>
                    </div>
                    
                    <div class="mb-3">
                        <label class="form-label">Category</label>
                        <select asp-for="Input.CategoryId" asp-items="Model.Categories" class="form-select" required>
                            <option value="">Select a category...</option>
                        </select>
                        <span asp-validation-for="Input.CategoryId" class="text-danger"></span>
                    </div>
                    
                    <div class="mb-4">
                        <label class="form-label">Description</label>
                        <textarea asp-for="Input.Description" class="form-control" rows="3" placeholder="Enter expense description..."></textarea>
                        <span asp-validation-for="Input.Description" class="text-danger"></span>
                    </div>
                    
                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-primary">Submit</button>
                        <a asp-page="/Expenses" class="btn btn-outline-secondary">Cancel</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
