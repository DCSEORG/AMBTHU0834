@page
@model ExpenseManagement.Pages.ExpensesModel
@{
    ViewData["Title"] = "Expenses";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="mb-0">Expenses</h2>
    <a asp-page="/NewExpense" class="btn btn-primary">+ New Expense</a>
</div>

<!-- Filter -->
<div class="card mb-4">
    <div class="card-body">
        <form method="get" class="row g-3">
            <div class="col-md-8">
                <input type="text" name="filter" class="form-control" placeholder="Filter by category, description, or employee..." value="@Model.Filter" />
            </div>
            <div class="col-md-4">
                <button type="submit" class="btn btn-primary me-2">Filter</button>
                @if (!string.IsNullOrEmpty(Model.Filter))
                {
                    <a asp-page="/Expenses" class="btn btn-outline-secondary">Clear</a>
                }
            </div>
        </form>
    </div>
</div>

<!-- Expenses Table -->
<div class="card">
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table">
                <thead>
                    <tr>
                        <th>Date</th>
                        <th>Category</th>
                        <th>Amount</th>
                        <th>Status</th>
                        <th>Description</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var expense in Model.Expenses)
                    {
                        <tr>
                            <td>@expense.ExpenseDate.ToString("dd/MM/yyyy")</td>
                            <td>@expense.CategoryName</td>
                            <td>@expense.FormattedAmount</td>
                            <td>
                                <span class="status-badge status-@expense.StatusName?.ToLower()">
                                    @expense.StatusName
                                </span>
                            </td>
                            <td>@expense.Description</td>
                            <td>
                                @if (expense.StatusName == "Draft")
                                {
                                    <form method="post" asp-page-handler="Submit" asp-route-id="@expense.ExpenseId" class="d-inline">
                                        <button type="submit" class="btn btn-sm btn-outline-primary">Submit</button>
                                    </form>
                                    <form method="post" asp-page-handler="Delete" asp-route-id="@expense.ExpenseId" class="d-inline">
                                        <button type="submit" class="btn btn-sm btn-outline-danger" onclick="return confirm('Are you sure?')">Delete</button>
                                    </form>
                                }
                            </td>
                        </tr>
                    }
                    @if (!Model.Expenses.Any())
                    {
                        <tr>
                            <td colspan="6" class="text-center text-muted py-4">No expenses found</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
